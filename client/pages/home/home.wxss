.scroll-view_H1 {
  height: 40px;
  padding-right: 80px;
  width: 100%;
}

.interest-grids {
  height: 40px;
  line-height: 40px;
  padding-top: 1rpx;
  padding-right:1px;
  overflow: hidden;
	flex-direction:row;
	justify-content: space-between;
	display: flex; 

}

.interest-grid {
  position: relative;
  float: left;
  padding: 2rpx;
  /* width: auto; */
}

.interest-grid__label {
  margin: 5px 5px;
  padding: 0px 0px;
  display: block;
  text-align: center;
  color: #000;
  overflow: hidden;
  width: auto;
  border: none;
  font-size: 12px;
  background-color: white;
}

button::after {
  border: none;
}

.interest-grid__label__active {
  color: #f76700;
  font-size: 12px;
  border: none;
  margin-top: 5px;
  display: block;
  text-align: center;
  overflow: hidden;
  width: 100%;
  background-color: white;
}

.interest-grid__label__ischecked {
  margin: 5px 5px;
  padding: 0px 0px;
  color: #f76700;
  font-size: 12px;
  border: none;
  display: block;
  text-align: center;
  overflow: hidden;
  width: auto;
  background-color: white;
}

/* 感兴趣的课程列表  */

.list-grids {
  border-top: 1rpx solid #d9d9d9;
  border-left: 1rpx solid #d9d9d9;
}

.list-grid {
  position: relative;
  float: left;
  padding: 24rpx;
  width: 50%;
  box-sizing: border-box;
}

.list-grid__icon {
  display: block;
  width: 342rpx;
  height: 180rpx;
  margin: 0 auto;
}

.list-grid__icon_label {
  position: relative;
  float: right;
  right: 20rpx;
  bottom: 40rpx;
  box-sizing: border-box;
  background-color: black;
  opacity: 0.50;
  border-radius: 5px;
  font-size: 12px;
  color: white;
}

.list-grid__label {
  margin-top: 5px;
  display: block;
  text-align: center;
  color: #000;
  font-size: 15px;
  white-space: nowrap;
  text-overflow: ellipsis;
  overflow: hidden;
  width: 100%;
}

