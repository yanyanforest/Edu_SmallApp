/* pages/courseList/courseList.wxss */
@import "../commons/price.wxss";

page {
  background: #fff;
  font-size: 16px;
}

.container {
  border-top: 1px solid #e4e4e4;
  width: 100%;
}

.brand_item {
  border-top: none;
  border-bottom: 1px solid #e4e4e4;
  width: 100%;
}

.header {
  display: flex;
  flex-direction: row;
  width: 100%;
  height: 44px;
  float: true;
  background: #fff;
  border-bottom: 0.5px solid #e4e4e4;
}

.header {
  font-family: SourceHansCN-Normal;
  font-size: 30rpx;
  color: #4d4d4d;
  height: 40px;
  margin: 0;
  padding: 0;
  width: 100%;
  border-bottom: 2rpx solid #ddd;
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
  align-items: center;
  justify-content: center;
}

.header .header_left{
  width: 464rpx;
  display: inline-flex;
  flex-wrap: nowrap;
  align-items: center;
  border-right: 2rpx solid #e9e9e9;
}

