/* pages/searchList/searchList.wxss */
page {
  width: 100%;
  height: 100%;
  padding: 0;
  margin: 0;
}

.container {
  width: 100%;
  padding: 0;
  margin: 0;
}

.header {
  width: 100%;
  background: #fff;
  height: 160rpx;
  position: fixed;
  z-index:10;
}
/*搜索框*/
.searchBar {
  width:100%;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: center;
  padding-bottom:10rpx;
	line-height: 30px;
}

.search {
  width: 618rpx;
  height: 64rpx;
  margin:0 30rpx 0 0;
  background: #f7f7f7;
  border-radius: 4rpx;
}

.search .iconfont{
  width: 32rpx;
  height: 32rpx;
  margin: 24rpx 20rpx;
  float: left;
  color:#8A8B8E;
}

.search input {
  width:500rpx;
  height: 60rpx;
  line-height: 60rpx;
  margin-top: 2rpx;
  font-size: 30rpx;
  color: #a8a8a8;
}
/*搜索文字*/
.searchText {
  color: #ff6700;
  font-size: 30rpx;
}
/*分类*/
.check {
  font-family: SourceHansCN-Normal;
  font-size: 30rpx;
  color: #4d4d4d;
  height: 40px;
  margin: 0;
  width: 100%;
  background: #fff;
   border-bottom: 2rpx solid #ddd; 
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
  align-items: center;
  justify-content: center;
}

.checkVal {
  width: 464rpx;
  display: inline-flex;
  flex-wrap: nowrap;
  align-items: center;
  border-right: 2rpx solid #e9e9e9;
}

.checkVal view {
  width: 166rpx;
  display: inline-flex;
  justify-content: center;
  align-items: center;
  position: relative;
}

.activeOpt {
  color: #ff6700;
}
.checkVal .iconfont{
  display: inline-flex;
  width: 16rpx;
  height: 8rpx;
  font-size:16rpx;
   color:#787C7D; 
}
/*上下箭头*/
.icon-plus-select-up
 {
  position: absolute;
  top: 10rpx;
  left: 112rpx;
}
.icon-arrow-3{
  position: absolute;
  top: 20rpx;
  left: 112rpx;
}
.arrow{
  position: absolute;
  top: 16rpx;
  left: 112rpx;
}
/*右侧分类*/
.classification {
  width: 250rpx;
  display: inline-flex;
  justify-content: center;
  font-family: SourceHansCN-Normal;
  font-size: 30rpx;
}
.classification .header_active{
	  color: #ff6700;
}
.classification .iconfont{
  position: relative;
  width: 16rpx;
  height: 8rpx;
  font-size:16rpx;
  top: -15rpx;
  left:10rpx;
  color:#787C7D;
}
 .activeOpt .arrow{
  color: #ff6700;
} 
.activeOpt .active{
   color: #ff6700;
}
