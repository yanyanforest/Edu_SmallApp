/* pages/category/category.wxss */

page {
  background: #f5f5f5;
  height:100%;
}

.container {
  flex-direction: row;
	display: flex;
  height:100%;
  color:#2e2e2e;
  font-size: 32rpx;
  padding:0;
  margin:0;
}

.nav_left {
  width: 210rpx;
  height: 100%;
  background: #f5f5f5;
  border-right: 1px solid #e5e5e5;
}

.nav_left_items {
  height: 100rpx;
  padding-left:30rpx;
  line-height:100rpx;
}

.nav_left .nav_left_items.active {
  background: #fafafa;
  color: #ff6700;
  border-left:6rpx solid #ff6700;
}

.nav_center {
  width: 250rpx;
  height: 100%;
  background: #fafafa;
  border-right: 1px solid #e5e5e5;
}

 .nav_center_items {
 height: 100rpx;
  padding-left:30rpx;
  line-height:100rpx;
}

.nav_center_items.active {
  background: #fff;
  color: #ff6700;
}

.nav_right {
  width:290rpx;
  height: 100%;
  background: #ffffff;
}

.nav_right .nav_right_items {
  height: 100rpx;
  padding-left:30rpx;
  line-height:100rpx;
}

.nav_right_items.active {
  background: #fff;
  color: #ff6700;
}
