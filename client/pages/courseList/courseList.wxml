<view class='container'>
  <!--header 是个按钮-->
  <view class="header">
    <view class='header_left'>
      <!-- <block wx:for="{{ btns }}" wx:key="{{ item }}">
        <view class="{{selectedIndex == item.id? 'header_active':''}}" bindtap='category_changed' data-id='{{ item }}'>{{item.title}}</view>

      </block> -->
       <view class='option {{menuTapCurrent=="0"?"activeOpt":""}}' data-current="0" catchtap="menuTap">
            <span>综合</span>
        </view>
        <view class='option {{menuTapCurrent=="1"?"activeOpt":""}}' data-current="1" catchtap="menuTap">
          <span>人气</span>
          <image src="../../images/bottomGray.png" class="garyBottom"></image>
        </view>
        <view class='option {{menuTapCurrent=="2"?"activeOpt":""}}' data-current="2" catchtap="menuTap">
          <span>价格</span>
          <image src="../../images/topGray.png" class="bottomGary"></image>
          <image src="../../images/bottomGray.png" class="topGary"></image>
        </view>
    </view>
    <view class="header_right {{categoryBtn.isSelected ? 'header_active':''}}" bindtap='category_choose'>
    
    {{ categoryBtn.title }}
     <image src="../../images/bottomGray.png" class="topGary"></image>
    </view>
    <category style="top:44px" id="category" isShowAll="true" categorys="{{ categorys }}" bind:categorySelected="_categorySelected" firstDefaultCategory="{{firstSelectedCategory}}" secondDefaultCategory="{{secondSelectedCategory}}" thirdDefaultCategory="{{thirdSelectedCategory}}"></category>

  </view>
  <!-- <view class='weui-loading' hidden="{{ !hasRefresh }}" >
    <view class='weui-loading'>正在刷新......</view>
</view> -->
  <scroll-view scroll-y="true" bindscrolltolower="loadMore" bindscrolltoupper="refreshList" style='height:100%;'>


    <block wx:for="{{ courseList }}" wx:key="item">
      <view class="brand_item">
        <navigator url="../courseDetail/courseDetail?brand={{item.id}}&typeid={{item.typeid}}">
          <image src="{{ item.picture }}" class="pic"></image>
          <view class="right_cont">
            <view>
              <text class="title">{{ item.title }}</text>
            </view>
            <view>
              <text class="count"> {{item.num}}人在学</text>
            </view>
            <!-- <text class="price">￥{{item.price}}</text>  -->
            <view>
              <text class="price"><template is="price" data="{{price:item.price}}"/></text> </view>
          </view>
        </navigator>
      </view>
    </block>
    <!-- </view>  -->
    <!--  上拉加载  -->

  </scroll-view>
