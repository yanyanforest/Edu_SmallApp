<!--pages/color/selectColor.wxml-->
<view class='page'>
<view class="page__bd">
    <view class="weui-grids">
        <block wx:for-items="{{color}}" wx:key="{{item}}">
            <view class="weui-grid" data-number="{{item.number}}" bindtap="selectedColor">
                <view class="weui-grid__icon" style="background:{{item.number}};"></view>
            </view>
        </block>
    </view>
</view>
</view>